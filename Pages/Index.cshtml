@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IClienteRepository repo
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center d-flex flex-column justify-content-center align-items-center">
    <div>
        <h1 class="display-4 mt-5" style="color: #f5f5f5;">Bem vindo</h1>
        <p class="mb-4 mt-4" style="color: #958b8b;">Tela de cadastro</p>
    </div>
    <form class="d-flex flex-column align-items-center justify-content-center mt-3 mb-5 w-25" method="post" enctype="multipart/form-data">
        <h1 class="h4 mb-4" style="color: #958b8b;">Preencha com seus dados</h1>
        <div class="d-flex justify-content-center"><span style="color: #f5f5f5; width: 62px;">Nome:</span> <input class="mb-3 ms-3 border-0 rounded-1" asp-for="Cliente.Nome" /><br /></div>
        <div class="d-flex justify-content-center"><span style="color: #f5f5f5; width: 62px;">Email: </span> <input class="border-0 ms-3 rounded-1" asp-for="Cliente.Email" /><br /></div>
        <div class="d-flex justify-content-center w-75 mt-3"><span style="color: #f5f5f5; width: 62px;">Imagem: </span> <input class="border-0 ms-2 rounded-1" asp-for="Cliente.Imagem" type="file" /><br /></div>
        <div class="d-flex justify-content-center"><input class="border-0 rounded-2 mt-3" style="background-color: #ed145b; color: #f5f5f5; width: 250px;" type="submit" value="Adicionar" /></div>
    </form>


    <table class="table table-hover" style="color: #afafaf;">
        <thead>
            <tr>
                <th style="color: #ed145b; border-color: #ed145b;">Id</th>
                <th style="color: #ed145b; border-color: #ed145b;">Nome</th>
                <th style="color: #ed145b; border-color: #ed145b;">Email</th>
                @*<th style="color: #ed145b; border-color: #ed145b;">Imagem</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in repo.GetAll())
            {
                <tr style="border-color: #ed145b; color: #f5f5f5;">
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
